vrrp_instance {{ ansible_hostname }} {
  state MASTER
{% if ansible_distribution_file_variety == 'RedHat' %}
  interface {{ interface_rh }}
{% elif ansible_distribution_file_variety == 'Debian' %}
  interface {{ interface_deb }}
{% endif %}
  virtual_router_id 101
  priority 200
  advert_int 1
  authentication {
    auth_type PASS
    auth_pass {{ vrrp_pass }}
  }
  virtual_ipaddress {
    {{ vip }}
  }
}

virtual_server {{ vip }} 80 {
  delay_loop 6
  lb_algo rr
  lb_kind NAT
  protocol TCP

{% for server in servers %}
  real_server {{ server }} {
    TCP_CHECK {
      connect_timeout {{ conn_timeout }}
    }
  }

{% endfor %}  
  sorry_server: {{ sorry_server.server }} {{ sorry_server.port }}

}
